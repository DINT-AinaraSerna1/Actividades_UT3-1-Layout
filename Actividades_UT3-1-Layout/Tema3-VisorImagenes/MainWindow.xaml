<Window x:Class="Tema3_VisorImagenes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tema3_VisorImagenes"
        mc:Ignorable="d"
        Title="Tema 3 - Visor de imágenes" Height="450" Width="800">
    <DockPanel LastChildFill="True">
        <Border BorderThickness="3" BorderBrush="Black" CornerRadius="3" DockPanel.Dock="Right" Margin="10">
            <TextBlock Width="150" Background="lightgreen"></TextBlock>
        </Border>
        <TextBlock DockPanel.Dock="Bottom" Width="600" Background="LightBlue" Height="80" Margin="10">
            <DockPanel LastChildFill="False">
                <Label Content="Nº de imágenes: 10" DockPanel.Dock="Left"></Label>
                <Label Content="Diseñado por Javier Catalá" DockPanel.Dock="Right"></Label>
            </DockPanel>
        </TextBlock>
        <TextBlock></TextBlock>
    </DockPanel>
</Window>
